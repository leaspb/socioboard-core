@{
    string path = @System.Configuration.ConfigurationManager.AppSettings["domain"];
    }
<div id="page-wrapper">
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Manage Advertisement</h1>
        </div>

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Manage Advertisement Table
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row"></div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="ManageAdvertisementTable">
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->


</div>

<script src="~/Themes/@path/Contents/js/jquery-2.0.1.min.js"></script>
<script type="text/javascript">

    function bindmanageAdvertisement() {
        $('#ManageAdvertisementTable').html('<center><img src="../Themes/@path/Contents/img/admin/loading.gif" /></center>');
        $.ajax({
            type: 'POST',
            url: '../Advertisement/LoadAdvertisement',
            success: function (msg) {
                //alert(msg);
                $('#ManageAdvertisementTable').html(msg);
                $('#ManageAdvertisementTable').dataTable();
            },
        });
    }
    function EditAdvertisementDetails(id) {

        window.top.location.href = "../Advertisement/EditAdvertisement?Id=" + id;

    }

    $(document).ready(function () {
        bindmanageAdvertisement();
    });
</script>